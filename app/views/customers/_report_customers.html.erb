<table class="table table-bordered table-striped table-sm" >

<th bgcolor="#E6E6E6" colspan="5">
<table class="report">
  
  <tr>
    <td colspan="4"><h3 class="section"><%= customer.razao %></h3></td>
  </tr>

  <tr>
    <% if customer.id_emp.present? %>
      <td>
        <h5 class="section">Código: <%= customer.id_emp %></h5>
      </td>
    <% end %> 
    
      <td>
        <h5 class="section">
          Grupo: <%= customer.group.name %>
        </h5>
      </td>
  
    <% if customer.desde.present? %>
      <td>
        <h5 class="section">
          Cliente desde: <%= customer.since %>(<%= customer.howtime %>)
        </h5>
      </td>
    <% end %>


  </tr>
</table>
 
</th>
<tr></tr>



<th colspan="5">Endereço</th>
<tr>
  <td colspan="5">
    <% if customer.logradouro.present? or customer.municipio.present? %>
    <i class='glyphicon glyphicon-home'></i>
    <label class="fields-show-view"><%= customer.address %> <%= customer.get_cep%></label>
    <% end %>
  </td>
</tr>

<th colspan="3">Contatos</th>
<th colspan="2">Email</th>

<tr>
<td colspan="3">
    <% if customer.celular.present? or customer.celular2.present?%>
      <i class='glyphicon glyphicon-phone'></i>
      <label class="fields-show-view"><%= customer.mobilephone_numbers %></label>
    <% end %>

    <% if customer.telefone.present? or customer.telefone2.present? or customer.telefone3.present? %>
      <i class='glyphicon glyphicon-phone-alt'></i>
      <label class="fields-show-view"><%= customer.phone_numbers %></label>
      <label class="fields-show-view"><%= customer.contatos %></label>
      <br>
    <% end %>
  </td>
  <td colspan="2">
    <% if customer.email.present? or customer.email2.present? %>
      <i class='glyphicon glyphicon-envelope'></i>
      <label class="fields-show-view"><%= customer.mail %></label>
    <% end %>
  </td>  

</tr>

<th colspan="3">Endereço Coleta</th> 
<th class="th-field" colspan="2">Código acesso</th>

<tr>
  <td colspan="3">
    <% if customer.endereco_coleta.present? %>
    <label class="fields-show-view"><%= customer.endereco_coleta %></label>
    <% end %>
  </td>
  <td colspan="5">
      <label class="fields-show-view">
        <%= customer.cod if customer.cod.present? %>
      </label>
    </td>
  </tr>
</tr>

<th class="th-field">CPF</th>
<th class="th-field">CNPJ</th>
<th class="th-field">ISS</th>
<th class="th-field">CGF</th>
  <th class="th-field">CEI</th>
  <tr>
    <td>
      <label class="fields-show-view">        
        <%= customer.cpf if customer.cpf.present? %>
      </label>
    </td>
    <td>
      <label class="fields-show-view">
        <%= customer.get_cnpj%>
      </label>
    </td>
    <td>
      <label class="fields-show-view">
        <%= customer.iss if customer.iss.present? %>
      </label>
    </td>
    <td>
      <label class="fields-show-view">
        <%= customer.cgf if customer.cgf.present? %>
      </label>
    </td>     
    <td>
      <label class="fields-show-view">
        <%= customer.cei if customer.cei.present? %>
      </label>
    </td>     
  </tr>
</table>

<hr class="style-three">
</hr>