<%= form_tag(customers_path, :method => "get", id: "search-form", class: "navbar-form") do %>
  
<%= hidden_field_tag :active,params[:active] %>
  <div class="input-group">
      <%= select_tag "type_search", options_for_select([
        ['C처digo Cliente', 'id_emp'],
        ['C처digo Grupo', 'group_id'],
        ['Raz찾o', 'razao'],
        ['ISS', 'iss'],
        ['CPF', 'cpf'],
        ['CNPJ', 'cnpj'],
        ['CEI', 'cei'],
        ['CGF', 'cgf'],
        ['C처digo Acesso', 'cod']],
      selected: params[:type_search]),class: "form-control fields-show-view" %>
      <span class="input-group-btn">
        <%= text_field_tag :search, params[:search], placeholder: "Busca", class: "form-control fields-show-view",autocomplete: "off" %>          
        <%= button_tag(type: 'submit', class: "btn btn-primary",value: 'buscar') do %>
        <span class="glyphicon glyphicon-search"></span>
      </span>
      <% end %>    
  </div>

    <% if params[:search].present? %>
      <%= link_to customers_path(:active=>params[:active]) do %>
        <span class="glyphicon glyphicon-remove"></span>      
    <% end %>

  <% end %>
<% end %>